<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Libreria</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-secondary border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-info text-white" asp-area="" asp-controller="Authors" asp-action="Index">Autores</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-info text-white" asp-area="" asp-controller="Books" asp-action="Index">Libros</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-info text-white" asp-area="" asp-controller="Customers" asp-action="Index">Clientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-info text-white" asp-area="" asp-controller="Genres" asp-action="Index">Generos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-info text-white" asp-area="" asp-controller="Publishers" asp-action="Index">Editoriales</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container bg-light">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer bg-secondary text-white">
        <div class="container ">
            Fecha de hoy:&nbsp;@DateTime.Now.ToString("dd-MM-yyyy")
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
